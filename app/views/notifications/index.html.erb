<main class="row">
  <div class="body body__frinds">
    <div class="heading">
<!--自分の詳細ページか他のユーザーの詳細ページかで表示を変える-->
      <!--<h1 class="heading__title--en"></h1>-->
      <h3 class="heading__title--main">Notification ++</h3>
      <h3>通知一覧ページ</h3>
      
    </div>
    <div class="heading__border">
      <span class="border-title">通知を確認しよう！</span>
    </div>
    <div class="content">
      <div class="content__field--notifications">
        <div class="content__fields">
          <h2 class="content__fields--heading">My Notifications</h2>
          <div class="content__fields--flex">
            <div class="content__fields--notification">
             <!--自分からの通知は受け取らない-->
             <%# notifications = @notifications.where.not(visited_id: current_user.id) %>
              <% if @notifications.exists? %>
                <%= render 'notifications', notifications: @notifications %>
              <% else %>
                <h4>現在通知はありません</h4>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/sidebar' %>
</main>