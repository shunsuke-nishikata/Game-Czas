<main class="row">
  <div class="body body__mypage--edit">
    <div class="heading">
<!--自分の詳細ページか他のユーザーの詳細ページかで表示を変える-->
      <h3 class="heading__title--main">Events ++</h3>
      <h3 class="heading__title--ja">イベント作成ページ</h3>
      
    </div>
    <div class="heading__border">
      <span class="border-title">ゲームイベントを作成しよう！</span>
    </div>
    <div class="content">
      <div class="content__field--edit-mypage">
        <div class="content__fields">
          <h2 class="content__fields--heading">Event Create</h2>
          <%= form_with model: @event, url: events_path, local: true do |f| %>
          <%= render 'layouts/error', error: @event %>
            <div class="content__fields--flex">
              <div class="content__fields--flex-item-mypage1-user">
                <div class="content__image--user">
                  <%= attachment_image_tag current_user, :image, format: 'jpeg' , size: "250x250", class: "user-responsive"%>
                </div>
              　<div class="content__field--form-mypage">
                  <%= f.label "--- イベントメモ ---", class: "content__field--label-mypage no-responsive" %>
                  <%= f.text_area :game_location, class: "form-control content__field--form-game_location " %>
                </div>
              </div>
              <div class="content__fields--flex-item-mypage2-user">
                 <table class="table ">
                 <h3 class="fields-headding__no-responsive">My Event</h3>
                 <h3 class="fields-headding__responsive">My Event</h3>
                 <p class="fields-headding__responsive">イベントを作ろう</p>
                  <tr>
                    <th class="content__profile">イベント名</br>
                      <%= f.text_field :event_name, autofocus: true, autocomplete: "name", class: "form-control" %>
                    </th>
                  </tr>
                  <tr>
                    <th class="content__profile">開催予定</br>
                      <%= f.radio_button :is_online, false, checked: true %>オフライン</br>
                      <%= f.radio_button :is_online, true %>オンライン
                    </th>
                  </tr>
                  <tr>
                    <th class="content__profile">イベント日</br>
                      <%= f.date_field :event_date, autocomplete: "event_date", class: "form-control" %>
                    </th>
                  </tr>
                  <tr>
                    <th class="content__profile">開始時間
                      <%= f.time_field :starting_time, autocomplete: "start_time", class: "form-control event-new" %>
                    </th>
                  </tr>
                  <tr>
                    <th class="content__profile">終了時間</br>
                      <%= f.time_field :ending_time, autocomplete: "finish_time", class: "form-control event-new" %>
                    </th>
                  </tr>
                  <tr>
                    <th class="content__profile">料金
                      <%= f.text_field :place, autocomplete: "place", class: "form-control event-new", value: 0 %>円
                    </th>
                  </tr>
                </table>
                <div class="content__field--button">
                  <%= f.submit "イベント作成！", class: "mypage-button btn btn-success"%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/sidebar' %>
</main>