<% new_events.each do |event| %>
  <% # event.starting_time.blank? %>
  <div class="card content__fields--flex-item-event" style="width: 18rem;">
    <%= link_to user_path(event.user) do %>
      <%= attachment_image_tag event.user, :image, format: 'jpeg' , size: "80x80", class: "content__fields--image"%>
    <% end %>
    <div class="card-body">
      <h5 class="card-title">-- <%= event.event_name %> --</h5>
      <p class="card-text">
        <%= event.event_data.to_s(:date_jp) %></br> 
        <i class="far fa-clock"></i>
        <%= event.starting_time.to_s(:time) %>
        <span>~</span>
        <%= event.ending_time.to_s(:time) %></br>
        <%= link_to event_likes_path(event.id) do %>
          <i class="far fa-comments" style="color: black;"></i>
        <% end %>
        <%= event.event_comments.count%>
<!--いいね領域-->
        <% if event.likes_by?(current_user) %>
          <%= link_to event_like_path(event.id, event.likes), method: :delete do %>
            <i class="fas fa-heart" style="color: red;"></i>
          <% end %>
          <%= event.likes.count %> 
        <% else %>
          <%= link_to event_likes_path(event.id), method: :post do %>
            <i class="far fa-heart" style="color: black;"></i>
          <% end %>
          <%= event.likes.count %> 
        <% end %>
      </p>
      <div class="card-bosy__buttons">
        <% if event.user != current_user %>
          <%= form_with model: event, url: event_path(event), local: true do |f| %>
            <% if event.is_request == false %>
              <%= f.hidden_field :is_request, value: true %>
              <%= f.submit "オファーする", class: "btn btn-primary card-bosy__button" %>
            <% else %>
              <%= f.hidden_field :is_request, value: false %>
              <%= f.submit "オファー済み", class: "btn btn-primary card-bosy__button" %>
            <% end %>
          <% end %>
          <%= link_to "イベント詳細", event_path(event.id), class: "btn btn-success" %>
        <% else %>
          <%= link_to "My Event", event_path(event.id), class: "btn btn-info" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>