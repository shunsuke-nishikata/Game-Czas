<% if current_user.id != friend.id %>
  <% if current_user.following?(friend) %>
    <%= link_to "ﾌｫﾛｰ外す", user_relationships_path(friend), method: :delete, remote: true, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "ﾌｫﾛｰする", user_relationships_path(friend), method: :post, remote: true, class: "btn btn-success" %>
  <% end %>
<% end %>