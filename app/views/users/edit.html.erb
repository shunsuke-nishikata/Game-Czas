<main class="row">
  <div class="body body__mypage--edit">
    <div class="heading">
<!--自分の詳細ページか他のユーザーの詳細ページかで表示を変える-->
      <h3 class="heading__title--main">Profile ++</h3>
      <h3 class="heading__title--ja">プロフィール編集ページ</h3>
      
    </div>
    <div class="heading__border">
      <span class="border-title">プロフィールを編集しよう！</span>
    </div>
    <div class="content">
      <div class="content__field--edit-mypage">
        <div class="content__fields">
          <h2 class="content__fields--heading">My Profile</h2>
          <%= form_with model: @user, url: user_path(current_user), method: :patch, local: :true do |f| %>
            <div class="content__fields--flex">
              <div class="content__fields--flex-item-mypage1-user">
                <div class="content__image--user">
                  <%= attachment_image_tag @user, :image, format: 'jpeg' , size: "250x250"%>
                </div>
                <div class="content__image--form">
                  <%= f.attachment_field :image %>
                </div>
              　<div class="content__field--form-mypage">
                  <%= f.label "--- 自己紹介 ---", class: "content__field--label-mypage" %>
                  <%= f.text_area :introduction, class: "form-control content__field--form-introduction" %>
                </div>
              </div>
            
            
              <div class="content__fields--flex-item-mypage2-user">
                 <table class="table ">
                 <h3>Profile</h3>
                  <tr>
                    <th class="content__profile">名前</th>
                    <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %></td>
                  </tr>
                  <tr>
                    <th class="content__profile">性別</th>
                    <td>
                      <%= f.radio_button :sex, false, checked: true %>男性 
                      <%= f.radio_button :sex, true %>女性
                    </td>
                  </tr>
                  <tr>
                    <th class="content__profile">年齢</th>
                    <td><%= f.number_field :age, class: "age", min: 15, max: 100, class: "form-control" %></td>
                  </tr>
                  <tr>
                    <th class="content__profile">好きなゲーム</th>
                    <td><%= f.text_area :favorite_game, class: "form-control",placeholder: "アクション" %></td>
                  </tr>
                  <tr>
                    <th class="content__profile">SNSリンク</th>
                    
                    <td>
                      <i class="fab fa-twitter"></i>
                      <%= f.text_field :twitter, class: "form-control",placeholder: "twitter" %>
                      <i class="fab fa-instagram"></i>
                      <%= f.text_field :instagram, class: "form-control",placeholder: "instagram" %>
                      <i class="fab fa-youtube"></i>
                      <%= f.text_field :youtube, class: "form-control",placeholder: "youtube" %>
                    </td>
                  </tr>
                </table>
                <div class="content__field--button">
                  <%= f.submit "更新する", class: "mypage-button btn btn-success"%>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/sidebar' %>
</main>