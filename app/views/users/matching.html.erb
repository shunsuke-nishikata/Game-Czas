<main class="row">
  <div class="body body__frinds">
    <div class="heading">
      <h3 class="heading__title--main">Friends ++</h3>
      <h3>フレンド一覧ページ</h3>
    </div>
    <div class="heading__border">
      <span class="border-title">メッセージでゲームに誘おう！</span>
    </div>
    <div class="content">
      <%= render 'layouts/users_search' %>
      <div class="content__field--friends">
        <div class="content__fields">
          <h2 class="content__fields--heading">Friend Members</h2>
          <div class="content__fields--flex">
            <div class="content__fields--friends">
              <% @friends.each do |friend| %>
                <div class="content__fields--flex-item-mypage1-user  friend">
                  <div class="content__image--user">
                    <%= attachment_image_tag friend, :image, format: 'jpeg' , size: "250x250", class: "user-responsive"%></br>
                    <%= friend.name %>
                    <p class="responsive-friend-sns">
                      <% if friend.twitter.present? %>
                        <%= link_to friend.twitter, target: :_blank do %>
                          <i class="fab fa-twitter"></i>
                        <% end %>
                      <% end %>
                      <% if friend.instagram.present? %>
                        <%= link_to friend.instagram, target: :_blank do %>
                          <i class="fab fa-instagram"></i>
                        <% end %>
                      <% end %>
                      <% if friend.youtube.present? %>
                        <%= link_to friend.youtube, target: :_blank do %>
                          <i class="fab fa-youtube"></i>
                        <% end %>
                      <% end %>
                    </p>
                  </div>
                  
                  <div class="content__field--follow">
                    <p class="responsive-follow-count">follow <%= friend.followings.count %>人 follower<%= friend.followers.count %>人</p>
                    <%= render partial: 'follow_button', locals: {user: friend} %>
                  </div>
                  
                  <table class="table table-bordered ">
                    <tr>
                      <th class="content__profile no-responsive">--- 自己紹介 ---</th>
                    </tr>
                    <tr>
                      <td><%= friend.introduction %></td>
                    </tr>
                  </table>
                </div>
                <table class="table table-hover no-responsive">
                  <thead class="thead-light">
                    <tr>
                      <th>写真</th>
                      <th></th>
                      <th></th>
                      <th>名前</th>
                      <th>年齢</th>
                      <th>性別</th>
                      <!--<th>よくやるゲーム</th>-->
                      <th>SNS</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="content__fields--matching-users">
                        <%= link_to user_path(friend.id) do %>
                          <%= attachment_image_tag friend, :image, format: 'jpeg' , size: "70x70"%>
                        <% end %>
                      </td>
                      <td class="content__fields--matching-users">
                        <%= link_to "Message", room_path(friend), class: "btn btn-warning" %>
                      </td>
                        <td class="content__fields--matching-users">
                          
                          <div id="matching_follow_button<%= friend.id %>">
                            <%= render partial: 'follow_matching', locals: {friend: friend} %>
                          </div>
                          
                        </td>
                      <td class="content__fields--matching-users"><%= friend.name %></td>
                      <td class="content__fields--matching-users"><%= friend.age %></td>
                      <% if friend.sex == true %>
                        <td class="content__fields--matching-users">女性</td>
                      <% else %>
                        <td class="content__fields--matching-users">男性</td>
                      <% end %>
                      <!--<td class="content__fields--matching-users"><%#= friend.favorite_game %></td>-->
                      <td class="content__fields--matching-users">
                         <% if friend.twitter.present? %>
                            <%= link_to friend.twitter, target: :_blank do %>
                              <i class="fab fa-twitter"></i>
                            <% end %>
                          <% end %>
                          <% if friend.instagram.present? %>
                            <%= link_to friend.instagram, target: :_blank do %>
                              <i class="fab fa-instagram"></i>
                            <% end %>
                          <% end %>
                          <% if friend.youtube.present? %>
                            <%= link_to friend.youtube, target: :_blank do %>
                              <i class="fab fa-youtube"></i>
                            <% end %>
                          <% end %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/sidebar' %>
</main>