<main class="row">
  <div class="body body__frinds">
    <div class="heading">
      <h3 class="heading__title--main">Friends ++</h3>
      <h3>フレンド一覧ページ</h3>
    </div>
    <div class="heading__border">
      <span class="border-title">メッセージでゲームに誘おう！</span>
    </div>
    <div class="content">
      <div class="content__field--friends">
        <div class="content__fields">
          <h2 class="content__fields--heading">Friend Members</h2>
          <div class="content__fields--flex">
            <div class="content__fields--friends">
              <% @friends.each do |friend| %>
                <table class="table table-hover">
                  <thead class="thead-light">
                    <tr>
                      <th>写真</th>
                      <th></th>
                      <th></th>
                      <th>名前</th>
                      <th>年齢</th>
                      <th>性別</th>
                      <th>よくやるゲーム</th>
                      <th>SNS</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="content__fields--matching-users">
                        <%= link_to user_path(friend.id) do %>
                          <%= attachment_image_tag friend, :image, format: 'jpeg' , size: "70x70"%>
                        <% end %>
                      </td>
                      <td class="content__fields--matching-users">
                        <%= link_to "Message", room_path(friend), class: "btn btn-warning" %>
                      </td>
                        <td class="content__fields--matching-users">
                          <% if current_user.following?(friend) %>
                            <%= link_to "フォロー外す", user_relationships_path(friend), method: :delete, class: "btn btn-primary" %>
                          <% else %>
                            <%= link_to "フォローする", user_relationships_path(friend), method: :post, class: "btn btn-success" %>
                          <% end %>
                        </td>
                      <td class="content__fields--matching-users"><%= friend.name %></td>
                      <td class="content__fields--matching-users"><%= friend.age %></td>
                      <% if friend.sex == true %>
                        <td class="content__fields--matching-users">女性</td>
                      <% else %>
                        <td class="content__fields--matching-users">男性</td>
                      <% end %>
                      <td class="content__fields--matching-users"><%= friend.favorite_game %></td>
                      <td class="content__fields--matching-users">
                         <% if friend.twitter.present? %>
                            <%= link_to friend.twitter, target: :_blank do %>
                              <i class="fab fa-twitter"></i>
                            <% end %>
                          <% end %>
                          <% if friend.instagram.present? %>
                            <%= link_to friend.instagram, target: :_blank do %>
                              <i class="fab fa-instagram"></i>
                            <% end %>
                          <% end %>
                          <% if friend.youtube.present? %>
                            <%= link_to friend.youtube, target: :_blank do %>
                              <i class="fab fa-youtube"></i>
                            <% end %>
                          <% end %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/sidebar' %>
</main>