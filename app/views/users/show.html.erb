<main class="row">
  <div class="body body__mypage">
    <div class="heading">
<!--自分の詳細ページか他のユーザーの詳細ページかで表示を変える-->
      <h1 class="heading__title--en"></h1>
      <h3 class="heading__title--main">My page ++</h3>
      <h3>自分の詳細ページ</h3>
    </div>
    <div class="heading__border">
      <span class="border-title">プロフィールを充実させよう</span>
    </div>
    <div class="content">
      <div class="content__field--mypage">
        <div class="content__fields">
          <h2 class="content__fields--heading">My Profile</h2>
          <div class="content__fields--flex">
            <div class="content__fields--flex-item-mypage1">
              <table class="table">
                <tr>
                  <th class="content__profile">名前</th>
                  <td><%= @user.name %></td>
                </tr>
                <tr>
                  <th class="content__profile">性別</th>
                  <% if @user.sex == true %>
                    <td>女性</td>
                  <% else %>
                    <td>男性</td>
                  <% end %>
                </tr>
                <tr>
                  <th class="content__profile">年齢</th>
                  <td><%= @user.age %></td>
                </tr>
                <tr>
                  <th class="content__profile">よくやるゲーム</th>
                  <td><%= @user.favorite_game %></td>
                </tr>
                <tr>
                  <th class="content__profile">自己紹介</th>
                  <td><%= @user.introduction %></td>
                </tr>
                <tr>
                  <th class="content__profile">SNSリンク</th>
                  <td>
                    <%= @user.twitter %></br>
                    <%= @user.instagram %></br>
                    <%= @user.youtube %>
                  </td>
                </tr>
              </table>
              <div class="content__field--button">
                <%= link_to "編集", edit_user_path(current_user), class: "mypage-button btn btn-info"%>
              </div>
            </div>
            <div class="content__fields--flex-item-mypage2">
              写真を丸く表示
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="sidebar">
    <div class="sidebar__logo">
      
    </div>
    <nav>
      <ul class="nav nav-pills nav-fill flex-column sidebar__nav">
        <li class="nav-item">
           <%= link_to "Home", events_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          Message
        </li>
        <li class="nav-item">
          <%= link_to "Event Create", new_event_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Friend", users_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Page", user_path(current_user), class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Notification(通知)", notifications_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-item" %>
        </li>
      </ul>
    </nav>
  </div>
</main>