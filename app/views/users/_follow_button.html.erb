<p>follow <%= user.followings.count %>人 &nbsp; follower<%= user.followers.count %>人</p>
<% if user.id != current_user.id %>
  <% if current_user.following?(user) %>
    <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, remote: true, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user), method: :post, remote: true, class: "btn btn-success" %>
  <% end %>
  <%= link_to "Message", room_path(user.id), class: "btn btn-warning" %>
<% end %>