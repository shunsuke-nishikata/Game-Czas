<% if event.likes_by?(current_user) %>
  <%= link_to event_like_path(event.id, event.likes), method: :delete, remote: true do %>
    <i class="fas fa-heart" style="color: #d7c447;"></i>
  <% end %>
    <%= event.likes.count %>
<% else %>
  <%= link_to event_likes_path(event.id), method: :post, remote: true do %>
    <i class="far fa-heart" style="color: black;"></i>
  <% end %>
    <%= event.likes.count %>
<% end %>