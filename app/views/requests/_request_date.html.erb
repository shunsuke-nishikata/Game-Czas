<p>
  <%= link_to user_path(event.user) do %>
    <%= attachment_image_tag event.user, :image, format: 'jpeg' , size: "30x30", class: "content__fields--image"%></br>
  <% end %>
  <span class="responsive-none">--開催予定時間--</span></br>
  <%= event.starting_time.to_s(:time) %>
  <span> ~ </span>
  <%= event.ending_time.to_s(:time) %>
  <%= link_to "イベント詳細", event_path(event.id), class: "btn btn-success responsive-btn-typeA" %></br>
  <%= link_to "詳細", event_path(event.id), class: "btn btn-success responsive-btn-typeB" %></br>
</p>