<main class="row">
  <div class="body body__signup">
    <div class="heading">
      <h1 class="heading__title--en">Sign Up</h1>
      <h3 class="heading__title--ja">新規登録ページ</h3>
    </div>
    <div class="heading__border">
      <span class="border-title">Sign Upして参加しよう！</span>
    </div>
    <div class="content text-center">
      <div class="content__field">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
        
          <div class="content__field--form">
            <%= f.label :name, class: "content__field--label" %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
          </div>
          
          <div class="content__field--form">
            <%= f.label :email, class: "content__field--label" %><br />
            <%= f.email_field :email,autocomplete: "email", class: "form-control"  %>
          </div>
        
          <div class="content__field--form">
            <%= f.label :password, class: "content__field--label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上 半角英数字)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control"  %>
          </div>
        
          <div class="content__field--form">
            <%= f.label :password_confirmation, class: "content__field--label" %>
            <span>(確認)</span><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
          </div>
        
          <div class="btn-actions">
            <%= f.submit "Sign up", class: "btn-actions__sign-up-btn form-control" %>
          </div>
        <% end %>
        
          <div class="btn-actions">
            <%= link_to "ログインページへ", new_user_session_path, class: "btn-actions__sign-in-btn2 form-control" %>
          </div>
        
      </div>
    </div>
    
  </div>
  <div class="sidebar">
    <div class="sidebar__logo">
      <h3 class="sidebar__logo--headding" style="color:white;"><%= image_tag 'game-czas.png' , class: "game-czas-logo"%><br></h3>
      <h3  style="color:white;">welcome to Game-Czas</h3>
    </div>
    <nav>
      <ul class="nav nav-pills nav-fill flex-column sidebar__nav">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-item"  do %>
            <i class="fas fa-home"></i>
            TOP
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class: "nav-item" do %>
            <i class="fas fa-user-plus"></i>
            Sign Up
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to  new_user_session_path, class: "nav-item" do %>
            <i class="fas fa-sign-in-alt"></i>
            Login
          <% end %>
        </li>
      </ul>
    </nav>
  </div>
</main>