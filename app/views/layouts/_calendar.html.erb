<div class="content__fields">
  <h2 class="content__fields--heading">My Calendar</h2>
  <div class="content__fields--calendar">
    <%= month_calendar events: events do |date, events| %>
      <%= date.day %>
      
      <% events.each do |event| %>
        <div class="calendar__content">
          <p>
            <%= link_to user_path(event.user) do %>
              <%= attachment_image_tag event.user, :image, format: 'jpeg' , size: "30x30", class: "content__fields--image"%></br>
            <% end %>
            --開催予定時間--
            <%= event.starting_time.to_s(:time) %>
            <span>~</span>
            <%= event.ending_time.to_s(:time) %>
            <%= link_to "イベント詳細", event_path(event.id), class: "btn btn-success" %></br>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>