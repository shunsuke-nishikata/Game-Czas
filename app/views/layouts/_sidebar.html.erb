 <div class="sidebar">
    <div class="sidebar__logo">
       <h3 class="sidebar__logo--headding" style="color:white;">welcome to Game-Czas</h3>
       <div class="sidebar__logo--icon-field">
         <%= link_to  user_path(current_user) do %>
           <%= attachment_image_tag current_user, :image, format: 'jpeg' , size: "60x60", class: "sidebar-icon"%>
          <% end %>
       </div>
    </div>
    <nav>
      <ul class="nav nav-pills nav-fill flex-column sidebar__nav">
        <li class="nav-item">
          <%= link_to "Home", events_path, class: "nav-item" %>
        </li>
        <% if unchecked_notifications.any? %>
          <i class="fas fa-comment-dots" style="color: #00ac9b;"></i>
        <% end %>
        <li class="nav-item">
          <%= link_to "Message", messages_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Favorite Events", favorite_events_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Event Create", new_event_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Friend", matching_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "My Page", user_path(current_user), class: "nav-item" %>
        </li>
        <% if unchecked_notifications.any? %>
            <i class="fa fa-circle" style="color: gold;"></i>
        <% end %>
        <li class="nav-item">
          <%= link_to "Notification", notifications_path, class: "nav-item" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-item" %>
        </li>
      </ul>
    </nav>
  </div>