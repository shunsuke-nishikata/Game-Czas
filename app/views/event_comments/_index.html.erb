<% event_comments.each do |event_comment| %>
  <li style="list-style: none;">
    <div class="comment-body ">
      <div class="comment-text<%= event_comment.id %>">
        <div class="message-box__user-left">
          <div class="message-user">
            <%= link_to user_path(event_comment.user) do %>
              <%= attachment_image_tag event_comment.user, :image, format: 'jpeg' , size: "80x80", class: "message-icon-l"%></br>
            <% end %>
            <%= event_comment.user.name %>
          </div>
          <div class="message-field">
            <p class="says-l"><%= event_comment.comment %></p>
            <%= event_comment.created_at.strftime("%Y-%m-%d %H:%M")%>
            <% if event_comment.user == current_user %>
              <%= link_to  event_event_comment_path(event_comment.event, event_comment), method: :delete, remote: true do %>
                <i class="fas fa-window-close"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </li>
<% end %>
<span class="comment-count">
  <i class="far fa-comments" style="color: black;"></i>
  <%= event_comments.count %>コメント
</span>